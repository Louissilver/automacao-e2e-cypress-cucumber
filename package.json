{
  "name": "automacao-e2e-cypress-cucumber",
  "version": "1.0.0",
  "description": "Projeto desenvolvido com Cypress, Cucumber e NodeJS para automação de aplicações end-to-end",
  "keywords": [
    "cypress",
    "cucumber",
    "automacao",
    "qa",
    "e2e"
  ],
  "license": "ISC",
  "author": "Luís Fernando da Silveira",
  "type": "commonjs",
  "main": "index.js",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "open:desktop": "cypress open --env VIEWPORT=macbook-15",
    "open:mobile": "cypress open --env VIEWPORT=iphone-6+",
    "run:desktop": "cypress run --env VIEWPORT=macbook-15",
    "run:mobile": "cypress run --env VIEWPORT=iphone-6+",
    "prepare": "husky",
    "preinstall": "npm i -g dotenv-cli",
    "report:clean": "node -e \"try{require('fs').rmSync('cypress/reports',{recursive:true,force:true})}catch(e){}\"",
    "report:prep": "node -e \"require('fs').mkdirSync('cypress/reports/mochawesome/merged',{recursive:true});\"",
    "report:merge": "npm run report:prep && mochawesome-merge \"cypress/reports/mochawesome/*.json\" -o cypress/reports/mochawesome/merged/report.json",
    "report:generate": "marge cypress/reports/mochawesome/merged/report.json --reportDir cypress/reports/mochawesome --reportFilename report.html --inline",
    "report": "npm run report:merge && npm run report:generate"
  },
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^22.2.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.5",
    "cypress": "^14.5.4",
    "cypress-multi-reporters": "^2.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@faker-js/faker": "^9.9.0",
    "cnpj": "^5.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^17.2.1",
    "eslint-plugin-cypress": "^5.1.1",
    "gerador-validador-cpf": "^6.3.0",
    "husky": "^9.1.7",
    "mocha-junit-reporter": "^2.2.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}
